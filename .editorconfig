root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = true

[*.scss]
indent_size = 2

[*.ts]
quote_type = single

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.vue,*.wpy}]
indent_size = 2
tab_width = 2
